<!--  パネルの幅を変更したいがわからない。 -->

<div class="panel panel-default" >
  <div class="panel panel-info">
    <div class="panel-heading">
      メッセージ一覧
    </div>
  </div>

  <!-- @messagesの内容がmessageに入ってきてくれる -->
  <div class="panel-body">
    <% @messages.each do |message|  %>
      <span class="label label-info">
      <%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>





