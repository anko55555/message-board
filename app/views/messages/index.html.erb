<!--  パネルの幅を変更したいがわからない。 -->
<div class="panel panel-default" >
  <div class="panel panel-info">
    <div class="panel-heading">
      メッセージ一覧
    </div>
  </div>

  <!-- @messagesの内容がmessageに入ってきてくれる -->
  <div class="panel-body">
    <% @messages.each do |message|  %>
      <span class="label label-info">
      <%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<!-- 5.4フォームの作成を参照-->
<!-- app/controllers/messages_controller.rbを参照-->
<!-- form_forの引数である@messageにMessage.newを代入する -->

<!-- form-group:<div class="form-group">を<div class="row">と考える。  -->

<form class="form-horizontal">  
<%= form_for(@message) do |f| %>


    <div class="form-group">
      <label class="col-xs-2 control-label">
         名前:
      </label>
      <div class="col-xs-10">
          <%= f.text_area :name ,:cols => 40, :rows => 1  %>  
      </div>
    </div>   
         
    <div class="form-group">
      <label class="col-xs-2 control-label">
       内容:
      </label>
      <div class="col-xs-10">
         <%= f.text_area :body , :cols => 60, :rows => 10 , :placeholder=>"メッセージをお願いします。" %>
      </div>
    </div>
    
    <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "送信", class: "btn btn-primary" %>
     </div>
    </div>
    
<% end %>

</form>